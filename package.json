{
  "name": "relique.co",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:admin": "turbo run dev --filter=admin",
    "dev:all": "turbo run dev --filter=web --filter=admin",
    "start": "turbo run start",
    "start:web": "turbo run start --filter=web",
    "start:admin": "turbo run start --filter=admin",
    "start:all": "turbo run start --filter=web --filter=admin",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "tsc --build",
    "typecheck:watch": "tsc --build --watch",
    "check": "pnpm lint && pnpm typecheck && pnpm build"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.5",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=18"
  }
}
